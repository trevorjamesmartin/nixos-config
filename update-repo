#!/bin/sh

destination=~/nixos-laptop-config

# ensure folder exists
mkdir -p $destination/nixos

fcount=0

for f in $(ls /etc/nixos)
do
        echo "copying : /etc/nixos/$f"
        cp -r /etc/nixos/$f $destination/nixos
        fcount=$((fcount + 1)) 
done



echo $fcount files copied to $destination

